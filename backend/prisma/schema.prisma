generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Canvas {
  id           String   @id @default(uuid())
  width        Int
  height       Int
  version      Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  pixels       Pixel[]
  pixelHistory PixelHistory[]
}

model Pixel {
  canvasId  String
  x         Int
  y         Int
  color     Int
  userId    String?
  updatedAt DateTime @updatedAt

  canvas    Canvas @relation(fields: [canvasId], references: [id])
  user      User?  @relation(fields: [userId], references: [id])

  @@id([canvasId, x, y])
  @@index([canvasId, updatedAt(sort: Desc)])
  @@index([userId, updatedAt(sort: Desc)])
}

model PixelHistory {
  id        BigInt   @id @default(autoincrement())
  canvasId  String
  x         Int
  y         Int
  color     Int
  userId    String?
  createdAt DateTime @default(now())

  canvas    Canvas @relation(fields: [canvasId], references: [id])
  user      User?  @relation(fields: [userId], references: [id])

  @@index([canvasId, createdAt(sort: Desc)])
}

model User {
  id               String   @id @default(uuid())
  username         String   @unique
  lastPixelPlaced  DateTime?
  totalPixelsPlaced Int     @default(0)
  createdAt        DateTime @default(now())

  pixels       Pixel[]
  pixelHistory PixelHistory[]

  @@index([username])
}
